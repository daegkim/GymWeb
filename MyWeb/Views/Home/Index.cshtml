        .nav-header {
            background-color: #303030;
            height: 75px;
            padding-top: 20px;
            padding-left: 280px;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
        }

        .nav-header ul li {
            display: inline-block;
            margin-right: 50px;
        }

        .nav-header > ul > li > a {
            text-decoration: none;
            color: white;
        }

        .nav-title {
